<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogPermission"
        android:layout_width="307dp"
        android:layout_height="102dp"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/permissionAttention"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogPermission">


        <ImageButton
            android:id="@+id/dialogYesBtnPerm"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/alertBack"
            app:srcCompat="@drawable/ic_accept" />

        <ImageButton
            android:id="@+id/dialogNoBtnPerm"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:backgroundTint="@color/alertBack"
            app:srcCompat="@drawable/ic_cross" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>