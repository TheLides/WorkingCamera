<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogTextScaling"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/attentionBrightness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <EditText
        android:id="@+id/dialogBrightness"
        android:layout_width="409dp"
        android:layout_height="57dp"
        android:hint="@string/alertdialogBrightness"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextScaling" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogBrightness">


        <ImageButton
            android:id="@+id/dialogEnterBtnBr"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/alertBack"
            app:srcCompat="@drawable/ic_accept" />

        <ImageButton
            android:id="@+id/dialogCancelBtnBr"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:backgroundTint="@color/alertBack"
            app:srcCompat="@drawable/ic_cross" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>